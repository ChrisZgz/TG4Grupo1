<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:id="@+id/linearLayoutCompat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/estilo_textview"
                android:text="Titulo: "
                android:textAlignment="center"
                android:textColor="#E1E4EB"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="39dp"
                tools:layout_conversion_absoluteWidth="294dp" />

            <TextView
                android:id="@+id/tPrecio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/estilo_textview"
                android:text="Precio: "
                android:textAlignment="center"
                android:textColor="#E1E4EB"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="37dp"
                tools:layout_conversion_absoluteWidth="88dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_textview"
            android:text="Categorias: "
            android:textAlignment="center"
            android:textColor="#E1E4EB"
            android:textSize="16sp"
            tools:layout_conversion_absoluteHeight="37dp"
            tools:layout_conversion_absoluteWidth="88dp" />

        <TextView
            android:id="@+id/tPlataforma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_textview"
            android:text="Plataformas: "
            android:textAlignment="center"
            android:textColor="#E1E4EB"
            android:textSize="16sp"
            tools:layout_conversion_absoluteHeight="37dp"
            tools:layout_conversion_absoluteWidth="88dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>